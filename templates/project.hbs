<div class="row padding-bottom-10">
	<div class="col-xs-12 visible-xs">
		<h4>{{title}}</h4>
	</div>
	<div class="col-xs-6 col-sm-4">
		<a href="/projects/view?id={{id}}">
			{{#if videoThumbnail}}
			<i class="fa fa-play-circle overlay-icon overlay-icon-hide"></i>
			<video class="play-on-hover img-responsive" rate="2" loopPause="1" preload="auto" src="{{videoThumbnail}}"/>
			{{/if}}
			{{#unless videoThumbnail}}
			<img class="img-responsive" src="{{thumbnail}}"/>
			{{/unless}}
		</a>
	</div>
	<div class="col-xs-6 col-sm-8 no-padding-left">
		<div class="btn-group btn-group-sm pull-right hidden-xs">
			<a href="/projects/view?id={{id}}" class="btn btn-default btn-default"><i class="fa fa-info-circle"></i> More Info</a>
			{{#if demoURL}}
				<a href="/projects/demo?id={{id}}" class="btn btn-default btn-success">
					{{#if demoText}}{{demoText}}{{/if}}
					{{#unless demoText}}Online Demo{{/unless}}
				</a>
			{{/if}}
			{{#if sourceURL}}
				<a href="{{sourceURL}}" class="btn btn-default btn-info" target="_blank">
					{{#if sourceText}}{{sourceText}}{{/if}}
					{{#unless sourceText}}<i class="fa fa-code"></i> Source{{/unless}}
				</a>
			{{/if}}
		</div>

		<a href="/projects/view?id={{id}}" class="no-link"><h4 class="no-margin-top hidden-xs">{{title}}</h4>
		<p>{{description}}</p></a>
	</div>
	{{#if demoURL}}
	<div class="col-xs-12 hidden-xs" style="height: 0;">
		<div class="row">
			<div class="col-xs-12 col-sm-8 col-sm-offset-4 no-padding-left">
				<a href="/projects/demo?id={{id}}" class="btn btn-success" style="transform: translateY(-100%) translateY(-10px);">
					{{#if demoText}}{{demoText}}{{/if}}
					{{#unless demoText}}Online Demo{{/unless}}
				</a>
			</div>
		</div>
	</div>
	{{/if}}

	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		<div class="btn-group btn-group-sm btn-group-justified visible-xs margin-top-10">
			<a href="/projects/view?id={{id}}" class="btn btn-default btn-default"><i class="fa fa-info-circle"></i> More Info</a>
			{{#if demoURL}}<a href="/projects/demo?id={{id}}" class="btn btn-default btn-success">Demo</a>{{/if}}
			{{#if sourceURL}}<a href="{{sourceURL}}" class="btn btn-default btn-info" target="_blank"><i class="fa fa-code"></i> Source</a>{{/if}}
		</div>
	</div>
</div>
