<div class="row" style="margin-bottom: 1em;">
	<div class="col-xs-12 col-sm-4">
		<a href="{{playURL}}">
			<img class="img-responsive" src="{{thumbnail}}"/>
		</a>
	</div>
	<div class="col-xs-12 col-sm-5">
		<h4>{{title}}</h4>
		<p>{{description}}</p>
		{{#tags}}
		<span class="label label-{{type}}">{{message}}</span>
		{{/tags}}
	</div>
	<div class="col-xs-12 col-lg-3">
		<div class="btn-group pull-right">
			<a href="{{playURL}}" class="btn btn-default btn-success">Play</a>
			<a href="{{sourceURL}}" class="btn btn-default btn-info" target="_blank"><i class="fa fa-code"></i> Source</a>
		</div>
	</div>
</div>
