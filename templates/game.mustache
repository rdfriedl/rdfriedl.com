<div class="row padding-bottom-10">
	<div class="col-xs-12 visible-xs">
		<h4>{{title}}</h4>
	</div>
	<div class="col-xs-6 col-sm-4">
		<a href="/games/game?id={{id}}">
			<img class="img-responsive" src="{{thumbnail}}"/>
		</a>
	</div>
	<div class="col-xs-6 col-sm-5 no-padding-left">
		<a href="/games/game?id={{id}}"><h4 class="no-margin-top hidden-xs">{{title}}</h4></a>
		<p>{{description}}</p>
		{{#tags}}
		<span class="label label-{{type}}">{{message}}</span>
		{{/tags}}
	</div>
	<div class="col-xs-12 col-lg-3">
		<div class="btn-group btn-group-sm pull-right hidden-xs">
			<a href="/games/play?id={{id}}" class="btn btn-default btn-success">Play</a>
			<a href="{{sourceURL}}" class="btn btn-default btn-info" target="_blank"><i class="fa fa-code"></i> Source</a>
		</div>
		<div class="btn-group btn-group-sm btn-group-justified visible-xs margin-top-10">
			<a href="/games/play?id={{id}}" class="btn btn-default btn-success">Play</a>
			<a href="{{sourceURL}}" class="btn btn-default btn-info" target="_blank"><i class="fa fa-code"></i> Source</a>
		</div>
	</div>
</div>
