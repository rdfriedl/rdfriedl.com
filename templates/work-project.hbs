<div class="row padding-bottom-10">
	<div class="col-xs-12 visible-xs">
		<h3>{{title}}{{#if company}} <small>by {{company}}</small>{{/if}}</h3>
	</div>
	<div class="col-xs-6 col-sm-4">
		<a href="/work/view?id={{id}}">
			{{#if videoThumbnail}}
			<i class="fa fa-play-circle overlay-icon overlay-icon-hide"></i>
			<video class="play-on-hover img-responsive" rate="2" loopPause="1" preload="true" src="{{videoThumbnail}}"/>
			{{/if}}
			{{#unless videoThumbnail}}
			<img class="img-responsive" src="{{thumbnail}}"/>
			{{/unless}}
		</a>
	</div>
	<div class="col-xs-6 col-sm-8 no-padding-left">
		<div class="btn-group btn-group-sm pull-right hidden-xs">
			<a href="/work/view?id={{id}}" class="btn btn-default btn-default"><i class="fa fa-info-circle"></i> More Info</a>
			{{#if demoURL}}<a href="/work/demo?id={{id}}" class="btn btn-default btn-success">Demo</a>{{/if}}
			{{#if siteURL}}<a href="{{siteURL}}" class="btn btn-default btn-info" target="_blank"><i class="fa fa-globe"></i> WebSite</a>{{/if}}
		</div>

		<a href="/work/view?id={{id}}" class="no-link"><h4 class="no-margin-top hidden-xs">{{title}}{{#if company}} <small>by {{company}}</small>{{/if}}</h4>
		<p>{{description}}</p></a>
		{{#each tags}}
		<span class="label label-{{type}}">{{title}}</span>
		{{/each}}
	</div>

	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		<div class="btn-group btn-group-sm btn-group-justified visible-xs margin-top-10">
			<a href="/work/view?id={{id}}" class="btn btn-default btn-default"><i class="fa fa-info-circle"></i> More Info</a>
			{{#if demoURL}}<a href="/work/demo?id={{id}}" class="btn btn-default btn-success">Demo</a>{{/if}}
			{{#if siteURL}}<a href="{{siteURL}}" class="btn btn-default btn-info" target="_blank"><i class="fa fa-globe"></i> WebSite</a>{{/if}}
		</div>
	</div>
</div>
