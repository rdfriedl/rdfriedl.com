{{>small-header}}

<div class="container no-padding-xs">
	<div class="panel panel-default">
		<div class="panel-body">
			{{#if pen}}
			<div class="btn-group pull-right hidden-xs">
				<a href="https://codepen.io/rdfriedl/pen/{{pen.id}}" class="btn btn-success" target="_blank"><i class="fa fa-code"></i> Source</a>
				<a href="https://codepen.io/rdfriedl" class="btn btn-info" target="_blank"><i class="fa fa-codepen"></i> More Pens</a>
			</div>
	  		<h2 class="no-margin-top hidden-xs">
				<a href="/pens" class="btn btn-default hidden-sm"><i class="fa fa-arrow-left"></i> Back</a>
				{{pen.title}}
			</h2>
	  		<h3 class="no-margin-top visible-xs text-center">
				{{pen.title}}
			</h3>

			<p id="pen-preview" data-theme-id="dark" data-slug-hash="{{pen.id}}" data-default-tab="result" data-user="rdfriedl" data-embed-version="2" class="codepen"></p>
			<script>document.getElementById('pen-preview').setAttribute('data-height', window.innerHeight - (20)*2)</script>
			<script src="https://production-assets.codepen.io/assets/embed/ei.js"></script>

			<div class="btn-group btn-group-justified visible-xs">
				<a href="https://codepen.io/rdfriedl/pen/{{pen.id}}" class="btn btn-success" target="_blank"><i class="fa fa-code"></i> Source</a>
				<a href="https://codepen.io/rdfriedl" class="btn btn-info" target="_blank"><i class="fa fa-codepen"></i> More Pens</a>
			</div>
			{{/if}}

			{{!-- used --}}
			{{#if pen.used.length}}
			<h3>Technologies Used</h3>
			<div class="columns columns-sm-2 columns-md-3">
				{{#pen.used}}
					<div class="column">
						{{#with tech}}
							{{>technology amount=../amount}}
						{{/with}}
					</div>
				{{/pen.used}}
			</div>
			{{/if}}

			{{#unless pen}}
			<h2 class="text-center">
				404....looks like that pen dose not exist
				<br>
				<small>but check out these other cool ones</small>
			</h2>
			{{/unless}}

			{{! other pens header }}
			{{#if pen}}
	  		<h3 class="hidden-xs no-margin-top">Other Pens</h3>
	  		<h3 class="visible-xs text-center no-margin-top">Other Pens</h3>
			{{/if}}

			{{! other pens }}
			<div class="columns columns-sm-2 columns-md-3 columns-lg-4">
				{{#each otherPens}}
				<div class="column">
					{{> pen}}
				</div>
				{{/each}}
			</div>
		</div>
	</div>
</div>

{{>footer}}
