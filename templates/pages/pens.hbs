{{>header}}

<div class="container no-padding-xs">
	<div class="panel panel-default">
		<div class="panel-body">
			<a href="https://codepen.io/rdfriedl" class="btn btn-success pull-right hidden-xs" target="_blank"><i class="fa fa-codepen"></i> More Pens</a>
			<h3 class="no-margin-top"><i class="fa fa-codepen"></i> CodePen Pens <br class="visible-xs"><small>some cool expariments i built</small></h3>

			<div class="row visible-xs">
				<div class="col-xs-8 col-xs-offset-2">
					<a href="https://codepen.io/rdfriedl" class="btn btn-large btn-block btn-success btn-sm margin-bottom-10" target="_blank"><i class="fa fa-codepen"></i> More Pens</a>
				</div>
			</div>

			<div class="columns columns-sm-2 columns-md-3 columns-lg-4">
				{{#each pens}}
				<div class="column">
					{{> pen}}
				</div>
				{{/each}}
			</div>
		</div>
	</div>
</div>

{{>footer}}
