{{>small-header}}

<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<div class="panel panel-default">
				<div class="panel-body">
					{{#pen}}
					<div class="page-header">
						<div class="btn-group pull-right hidden-xs">
							<a href="https://codepen.io/rdfriedl/pen/{{pen.id}}" class="btn btn-success" target="_blank"><i class="fa fa-code"></i> Source</a>
							<a href="https://codepen.io/rdfriedl" class="btn btn-info" target="_blank"><i class="fa fa-codepen"></i> More Pens</a>
						</div>
				  		<h2 class="no-margin-top">
							<a href="/pens" class="btn btn-default"><i class="fa fa-arrow-left"></i> Back</a>
							{{pen.title}}
						</h2>
					</div>

					<iframe src="https://codepen.io/rdfriedl/debug/{{pen.id}}" style="width: 100%; height: 90vh; border: none;" sandbox="allow-forms allow-pointer-lock allow-popups allow-same-origin allow-scripts allow-top-navigation"></iframe>

					<div class="btn-group btn-group-justified visible-xs">
						<a href="https://codepen.io/rdfriedl/pen/{{pen.id}}" class="btn btn-success" target="_blank"><i class="fa fa-code"></i> Source</a>
						<a href="https://codepen.io/rdfriedl" class="btn btn-info" target="_blank"><i class="fa fa-codepen"></i> More Pens</a>
					</div>
					{{/pen}}

					{{^pen}}
					<h2 class="text-center">
						404....looks like that pen dose not exist
						<br>
						<small>but check out these other cool ones</small>
					</h2>
					{{/pen}}

					{{#pen}}
					<div class="page-header">
				  		<h4>Other Pens</h4>
					</div>
					{{/pen}}
					<div class="row">
						{{#pens}}
						<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
							<h5>{{title}}</h5>
							<a href="/pens/view?id={{id}}">
								<img class="img-responsive project-image" src="https://dl.dropboxusercontent.com/spa/ihqn7sv44ik7per/site-assets/pens/{{id}}.png"/>
							</a>
						</div>
						{{/pens}}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

{{>footer}}
